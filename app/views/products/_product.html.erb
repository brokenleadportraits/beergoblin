
<%= link_to product do %>
	<div class="col-md-3 col-sm-4" id="beer-col" data-prod-brewery="<%= product.brewery %>">
	  <div class="beer-img-wrap">
	    <%= image_tag(product.image_url, class: "img-responsive") unless product.image_url.blank? %>
	    <p><%= product.name %><br>
	    <%= product.description %><br>
	    $<%= product.price %></p>
	  </div>
	</div>
<% end %>

